[alias]
	a = add
	br = branch
	cb = rev-parse --abbrev-ref HEAD
	ci = commit
	co = checkout
	fp = push --force-with-lease
	g = grep -n
	rs = reset HEAD --
	rsa = reset --hard HEAD
	slog = log --pretty=format:"%h%x09%an%x09%ad%x09%s" --date=iso
	st = status
	up = pull --ff-only
[merge]
	conflictstyle = diff3
	tool = vimdiff
	prompt = false
