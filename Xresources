! xft
!Xft.autohint:	0
!Xft.lcdfilter:	lcddefault
!Xft.hintstyle:	hintslight
!Xft.hinting:	0
!Xft.antialias:	1
!Xft.rgba:	rgb

! xterm
XTerm.termName:		xterm-256color
XTerm.vt100.background:	rgb:00/26/4c
XTerm.vt100.cursorColor: rgb:ff/99/00
XTerm.vt100.faceName:	Fira Mono Medium:pixelsize=13:antialias=true:autohint=true
XTerm.vt100.foreground:	rgb:cc/cc/ee
XTerm.vt100.highlightColor: rgb:ff/dd/00
XTerm.vt100.highlightColorMode: true
XTerm.vt100.highlightReverse: false
XTerm.vt100.highlightTextColor: black
XTerm.vt100.internalBorder: 8
XTerm.vt100.utf8:	true
XTerm.vt100.locale: false
XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl <Key> `: set-scrollbar(toggle)

! Scrollbar is hidden by default (there is no use for it when tmux is running),
! but it can be enabled by the menu or a keybinding above.
XTerm.vt100.scrollBar: false
XTerm.vt100.scrollbar.background: rgb:cc/cc/dd
XTerm.vt100.scrollbar.foreground: rgb:00/26/4c
XTerm.vt100.scrollbar.thumb: black
XTerm.vt100.scrollbar.borderWidth: 0
! Reverse the scroll direction on click to be consistent with the behaviour from Plan 9.
XTerm.vt100.scrollbar.translations: #override \n\
    <Btn1Down>: StartScroll(Backward) \n\
    <Btn3Down>: StartScroll(Forward)

! rxvt-unicode
! URxvt.background:	#303030
URxvt.background:	#223366
URxvt.foreground:	#d7d7d7
URxvt.cursorColor:	#ffaf00
URxvt.font:		xft:Roboto Mono Medium:pixelsize=13:antialias=true:autohint=true
URxvt.letterSpace:	-1
URxvt*termName:		rxvt-unicode-256color
URxvt*title:		Virtual Terminal
URxvt*saveLines:	65536
URxvt.scrollBar:	no
URxvt*skipScroll:	true
URxvt*jumpScroll:	true
URxvt*visualBell: 	false
