! xft
!Xft.autohint:	0
!Xft.lcdfilter:	lcddefault
!Xft.hintstyle:	hintslight
!Xft.hinting:	0
!Xft.antialias:	1
!Xft.rgba:	rgb

#ifdef DARK
#define CUR	chartreuse
#define NBG	grey5
#define NFG	goldenrod
#else
#define CUR	dark orange
#define NBG	cornsilk
#define NFG	black
#endif

! xterm
XTerm.termName:			xterm-256color
XTerm.vt100.background:		NBG
XTerm.vt100.cursorColor:	CUR
!XTerm.vt100.faceName:		Fira Mono Medium:pixelsize=15:antialias=true:autohint=true
XTerm.vt100.faceName:		Fira Mono Medium:pixelsize=13:antialias=true:autohint=true
XTerm.vt100.foreground:		NFG
XTerm.vt100.internalBorder: 	1
XTerm.vt100.utf8:		true
XTerm.vt100.locale: 		false

! Key bindings
XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d) \n\
    Ctrl <Key> `: set-scrollbar(toggle)

! Scrollbar is hidden by default (there is no use for it when tmux is running),
! but it can be enabled by the menu or a keybinding above.
XTerm.vt100.scrollBar: true
XTerm.vt100.scrollbar.background: NBG
XTerm.vt100.scrollbar.foreground: NFG
XTerm.vt100.scrollbar.borderColor: NFG
! This is a bitmap from /usr/include/X11/bitmaps; gray1 is the default.
XTerm.vt100.scrollbar.thumb: gray1
XTerm.vt100.scrollBarBorder: 2
! Reverse the scroll direction on click to be consistent with the behaviour from Plan 9.
XTerm.vt100.scrollbar.translations: #override \n\
    <Btn1Down>: StartScroll(Backward) \n\
    <Btn3Down>: StartScroll(Forward)
